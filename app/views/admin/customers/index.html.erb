<p id="notice"><%= notice %></p>
<div class="container">
  
<h1>Lista de Clientes</h1>

<table>
  <thead>
    <tr>
      <th>Username</th>
      <th>Activo</th>
      <th>Url</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @customers.each do |customer| %>
      <tr>
        <td><%= customer.username %></td>
        <td><%= customer.active %></td>
        <td><%= customer.url %></td>
        <td><%= link_to 'Show', [:admin, customer] %></td>
        <td><%= link_to 'Edit', edit_admin_customer_path(customer) %></td>
        <td><%= link_to 'Destroy', [:admin, customer], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nuevo Cliente', new_admin_customer_path, { :class=>'waves-effect waves-light btn'}  %>
</div>
