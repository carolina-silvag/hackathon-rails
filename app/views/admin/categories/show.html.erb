<div class="container">
  <p id="notice"><%= notice %></p>
  <div class="row">
    <div class="col s12 m12">
      <div class="card center">
        <div class="card-content white-text  light-blue">
          <span class="card-title"><strong><%= @category.name %></strong></span>
          <p><%= @category.active %></p>
          <p><%= @category.description %></p>
        </div>
        <div class="card-action blue-text">
        <%= link_to "<i class=\"material-icons\">edit</i>".html_safe, edit_admin_category_path(@category) %> 
        </div>
        <%= link_to 'Volver', admin_categories_path,  { :class=>'waves-effect waves-light btn'}%>
      </div>
    </div>
  </div>
</div>

