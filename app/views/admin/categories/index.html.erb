<div class="container">
  <p id="notice"><%= notice %></p>

  <h2>Lista de Categorías</h2>

  <%= link_to 'Agregar Nueva Categoría', new_admin_category_path, class: "waves-effect waves-light btn" %>
  <br>
  <div class="row">
  <% @categories.each do |category| %>
    <div class="col s12 m12">
      <div class="card ">
        <div class="card-content white-text  light-blue center">
          <span class="card-title "><strong><%= category.name %></strong></span>
          <p ><span class="text-green"><%= category.active %></span></p>
          <p><%= category.description %></p>
        </div>
        <div class="card-action blue-text center">
          <span><%= link_to "<i class=\"material-icons\">visibility</i>".html_safe,  [:admin, category], class: "waves-effect waves-light btn" %></span>
          <span><%= link_to "<i class=\"material-icons\">edit</i>".html_safe, edit_admin_category_path(category), class: "waves-effect waves-light btn" %></span>
          <span><%= link_to "<i class=\"material-icons\">delete</i>".html_safe, [:admin, category], method: :delete, data: { confirm: 'Are you sure?' }, class: "waves-effect waves-light btn" %></span>
        </div>
      </div>
    </div>
  <% end %>
  </div>
  <ul class="pagination center">
  <li class="disabled"><a href="#!"><i class="material-icons">chevron_left</i></a></li>
  <li class="active"><a href="#!">1</a></li>
  <li class="waves-effect"><a href="#!"><i class="material-icons">chevron_right</i></a></li>
  </ul>
</div>
    



